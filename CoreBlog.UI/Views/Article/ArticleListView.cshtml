
<div class="am-g am-g-fixed blog-g-fixed">
    <div class="am-u-md-8">
        @if (ViewBag.ArticleList != null)
        {
            foreach (var item in ViewBag.ArticleList)
            {
                <article class="blog-main">
                    <h3 class="am-article-title">
                        <a href="#">@item.Title</a>
                    </h3>
                    <h4 class="am-article-meta blog-meta">
                        by <a href="">@item.CreateBy</a> posted on @item.CreateOn under <a href="#">@item.Tag</a>
                    </h4>
                    <div class="am-g blog-content">
                        <div class="am-u-lg-7">
                           @item.Content
                        </div>
                        <div class="am-u-lg-5">
                            <p><img src="https://farm3.staticflickr.com/2917/14186214720_5d0b8ca2e3_b.jpg"></p>
                        </div>
                    </div>
                </article>
                <hr class="am-article-divider blog-hr">
            }
        }
        <div data-am-page="{pages:@ViewBag.Count,jump:'@Url.Action("ArticleListView")/%page%'}"></div>
    </div>
    <div class="am-u-md-4 blog-sidebar">
        <br />
        <div class="am-panel-group">
